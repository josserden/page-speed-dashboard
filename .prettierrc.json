{
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 100,
  "proseWrap": "always",
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "useTabs": false,
  "plugins": ["@trivago/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
  "importOrder": ["^react", "^next-$", "^react-", "^[a-zA-Z]", "^@(?!(/))\\w", "^[./]", "^@/"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
